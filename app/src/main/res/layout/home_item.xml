<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <ImageView
        android:visibility="gone"
        android:id="@+id/hone_image"
        android:layout_width="120dp"
        android:layout_height="126dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toRightOf="@+id/hone_image"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:text="去家里科技有限公司"
                android:textColor="#ff000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2020-06-15"
                android:textColor="#ff999999"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/home_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shape_home"
                android:maxLength="5"
                android:text="媒体广告"
                android:textColor="#ffe91e42"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/background_shape_home"
                android:maxLength="5"
                android:text="媒体广告"
                android:textColor="#ffe91e42"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/background_shape_home"
                android:maxLength="5"
                android:text="媒体广告"
                android:textColor="#ffe91e42"
                android:textSize="13sp"
                android:visibility="gone" />

        </LinearLayout>


        <TextView
            android:id="@+id/home_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="详情描述详详情描述详详情描述......"
            android:textColor="#ff999999"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4">

            <TextView
                android:id="@+id/home_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@mipmap/loaction_icon"
                android:text="内蒙古呼和浩特市新城区"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/home_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/icon_review"
                android:drawablePadding="2dp"
                android:gravity="right"
                android:text="5489"
                android:textColor="#ffbbbbbb"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>
</RelativeLayout>
