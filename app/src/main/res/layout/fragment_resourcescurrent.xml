<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/chooseCity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/icon_home_down"
                android:ellipsize="end"
                android:drawablePadding="10dp"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
                android:gravity="center"
                android:maxLines="1"
                android:text="全国"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/common_shape_round_dark"
                android:drawablePadding="8dp"
                android:imeOptions="actionSearch"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="6dp"
                android:background="@drawable/common_shape_round_serch_red"
                android:drawableLeft="@mipmap/icon_sousuo2"
                android:text="搜索"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/mRvArticle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/iv_release"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp" />
    </RelativeLayout>


</LinearLayout>
